#ifndef ENCODER_H
#define ENCODER_H

#include "stm32g4xx_hal.h"  // สำคัญสำหรับ STM32G474RE

class Encoder {
public:
    Encoder(TIM_HandleTypeDef *htim, int Channel);
    void update(float dt);

    float getPosition() const;
    float getVelocity() const;
    float getAcceleration() const;

private:
    TIM_HandleTypeDef *_htim;

    float _position;
    float _velocity;
    float _acceleration;

    float _lastPosition;
    float _lastVelocity;
};

#endif
