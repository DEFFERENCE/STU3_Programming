#ifndef ENCODER_H
#define ENCODER_H

class Encoder {
public:
	Encoder(TIM_HandleTypeDef *htim);

    void update(float newPosition, float dt);

    float getPosition();
    float getVelocity() const;
    float getAcceleration() const;

private:
    float _position;
    float _velocity;
    float _acceleration;

    float _lastPosition;
    float _lastVelocity;
};

#endif
