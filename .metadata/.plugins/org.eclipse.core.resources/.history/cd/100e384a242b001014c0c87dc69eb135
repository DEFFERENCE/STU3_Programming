#include <stdio.h>
#include "Prismatic.h"

PrismaticMotor create_prismatic_motor(double J, double B, double Eff, double Ke, double Kt, double R, double L) {
    PrismaticMotor motor = { J, B, Eff, Ke, Kt, R, L };
    return motor;
}


double disturbance_feedforward_pri(const PrismaticMotor* motor, double load_force) {
    double current = load_force / motor->Kt_Pri;
    double voltage = current * motor->R_Pri;
    return voltage;
}

double reference_feedforward_pri(const PrismaticMotor* motor, double linear_velocity) {
    return motor->Ke_Pri * linear_velocity;
}


